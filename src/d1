<template>
  <div id="app">
  <div>
    <div class="container">
  <h1>Movies</h1>
      <input type="text" v-model="searchKey">
    <button @click="searchMovies">Search</button>
    </div>
       <br>
    <ul>
      <li v-for="item in moviesList" :key="item.id">
            <HelloWorld3 :post="item"  />
      </li>
    </ul>
  </div>
  
</div>
</template>

<script>
import HelloWorld3 from './components/HelloWorld3.vue'
import axios from 'axios';

export default {
  name: 'app',
  data () {
    return {
      searchKey: '',
      moviesList: []
    }
  },
  
  components: {
    HelloWorld3
  },
  methods: {
    searchMovies(){
      var arr = [];
      // var url0 = 'https://api.ritekit.com/v1/emoji/suggestions?text='
      var url0 = 'https://api.ritekit.com/v1/stats/auto-hashtag?post='
      var res = this.searchKey.split(" ");
      for(var i=0; i<= res.length-1; i++){
      arr.push(res[i]);
      }
      for(var m=0; m< arr.length; m++){
        url0 += arr[m] + '%20';
      }
      var url= url0+'&client_id=192b3d49f217992dc0483e4d4f502af119f29eba6653';
      fetch(url)
      .then(res => res.json())
      .then(data => {
        this.moviesList = data;
      })
    }
  }
}
</script>

<style>
li{
  text-decoration: none;
  display: inline-block;
}
</style>